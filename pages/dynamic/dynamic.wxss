  float: left;
}
.contentImageItemPhoto{
  width: 100%;
  height: 95px;
}

.footer{
  width: 100%;
  float: left;
}
.line{
  width: auto;
  height: 1px;
  background: #e0e0e0;
  margin-left: 5px;
  margin-right: 5px;
}
.footer-item{
  width: 33.33%;
  float:left;
  margin-top: 10px;
