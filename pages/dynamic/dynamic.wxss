  padding: 5px;
}
.dynamic_item_image{
  width: 50px;
  height: 50px;
  border-radius: 25px;
}
#tv_title_name{
  position: absolute;
  color: #FF910A;
  margin-left: 5px;
  font-size:14px;
}
#tv_title_time{
  position: relative;
  left: 5px;
  color: #797a77;
  bottom: 10px;
  font-size:12px;
}
.contentImage{
  width: 100%;
  float: left;
  margin-top: 5px;
}
